<Page
    x:Class="TTT_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TTT_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Charts"
    xmlns:viewmodel="using:TTT_UWP.ViewModels"
    xmlns:interact="using:Microsoft.Xaml.Interactivity"
    xmlns:interactcore="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">
<!--
    <Page.Resources>
        <viewmodel:MainPageViewModel x:Key="mainViewModel"/>
    </Page.Resources>
-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel Margin="50,50,50,50" Name="relPanel">
            <TextBlock Name="LabelTemp" FontSize="25" Width="250" Height="50">Temperature graph</TextBlock>
            <Grid RelativePanel.Below="LabelTemp" Name="Grid1" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>
            <ComboBox x:Name="cmbSelectWarehouse" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 1, 60, 0" ItemsSource="{Binding magazijnen}" SelectedItem="{Binding selectedMag}">
                <interact:Interaction.Behaviors>
                    <interactcore:EventTriggerBehavior EventName="SelectionChanged">
                        <interactcore:InvokeCommandAction   
                    Command="{Binding ChangeWarehouseCommand}"
                    CommandParameter="{Binding ElementName=cmbSelectWarehouse, Path=SelectedItem}"/>
                    </interactcore:EventTriggerBehavior>
                </interact:Interaction.Behaviors>
            </ComboBox>

            <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True"  Name="LabelAirPressure" FontSize="25" Width="250" Height="50">Air pressure graph</TextBlock>
            <Grid RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="LabelAirPressure" Name="Grid2" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock RelativePanel.AlignRightWithPanel="True" Name="LabelHumidity" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="LabelHumidity" Name="Grid3" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock RelativePanel.Below="Grid1" Name="LabelEmployeeProd" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid RelativePanel.Below="LabelEmployeeProd" Name="Grid4" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock Name="LabelExtremes" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="Grid2" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid Name="Grid5"  RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="LabelExtremes"  Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock Name="LabelProducts" RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="Grid2" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid Name="Grid6"  RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="LabelProducts"  Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>
        </RelativePanel>
    </Grid>
</Page>
