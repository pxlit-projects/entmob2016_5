<Page
    x:Class="TTT_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TTT_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Charts"
    xmlns:viewmodel="using:TTT_UWP.ViewModels"
    xmlns:interact="using:Microsoft.Xaml.Interactivity"
    xmlns:interactcore="using:Microsoft.Xaml.Interactions.Core"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
   xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodel:MainPageViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ComboBox x:Name="cmbSelectWarehouse" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 1, 60, 0" 
                ItemsSource="{Binding Warehouses}" 
                SelectedItem="{Binding ButtonCommand}"
                DisplayMemberPath="WarehouseName">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="SelectionChanged">
                    <core:InvokeCommandAction Command="{Binding ButtonCommand}" />
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </ComboBox>

        <RelativePanel Margin="50,50,50,50" Name="relPanel">
            <TextBlock Name="LabelTemp" FontSize="25" Width="250" Height="50">Temperature graph</TextBlock>
            <Grid RelativePanel.Below="LabelTemp" Name="Grid1" Width="250" Height="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="118*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png" Margin="50,50,35.789,50"></Image>
            </Grid>           

            <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True"  Name="LabelAirPressure" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Width="250" Height="50">Air pressure graph</TextBlock>
            <Grid RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="LabelAirPressure" Name="Grid2" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock RelativePanel.AlignRightWithPanel="True" Name="LabelHumidity" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="LabelHumidity" Name="Grid3" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock RelativePanel.Above="Grid4" Name="LabelEmployeeProd" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid RelativePanel.AlignBottomWithPanel="True" Name="Grid4" Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock Name="LabelExtremes" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Above="Grid5" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid Name="Grid5"  RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignBottomWithPanel="True"  Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>

            <TextBlock Name="LabelProducts" RelativePanel.AlignRightWithPanel="True" RelativePanel.Above="Grid6" FontSize="25" Width="250" Height="50">Humidity graph</TextBlock>
            <Grid Name="Grid6"  RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True"  Width="250" Height="250">
                <Image Width="150" Height="150" Source="/Assets/StoreLogo.png"></Image>
            </Grid>
        </RelativePanel>
    </Grid>
</Page>
